<log4net>

  <appender name="CsvFileAppenderDetail" type="WheelChairCollaborativeGame.Logging.HeaderOnceAppender">
    <file value="logDetail.csv"/>
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
    <appendToFile value="true"/>
    <layout type="WheelChairCollaborativeGame.Logging.CsvPatternLayout">
      <header value="TimeStamp,GroupId,Event&#13;&#10;" />
      <conversionPattern value=
"%date{H:mm:ss.fff}%newfield%property{groupId}%newfield%property{type}%endrow" />
    </layout>
  </appender>

  <appender name="CsvFileAppenderSummary" type="WheelChairCollaborativeGame.Logging.HeaderOnceAppender">
    <file value="logSummary.csv"/>
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
    <appendToFile value="true"/>
    <layout type="WheelChairCollaborativeGame.Logging.CsvPatternLayout">
      <header value="TimeStamp,GID,actions_success_A,actions_failure_A,actions_success_B,actions_failure_B,shots_fired,shots_without_energy,shots_hit,shots_missed,score,invaders&#13;&#10;" />
      <conversionPattern value=
"%date{M/d/yyyy H:mm:ss.fff}%newfield%property{GroupId}%newfield%property{CompletedActionsA}%newfield%property{ActionsFailureA}%newfield%property{CompletedActionsB}%newfield%property{ActionsFailureB}%newfield%property{TotalShotsFired}%newfield%property{ShotsWithoutEnergy}%newfield%property{ShotsHit}%newfield%property{ShotsMissed}%newfield%property{Score}%newfield%property{Invaders}%endrow" />
    </layout>
  </appender>
  
  
  
  <appender name="CsvFileAppender" type="log4net.Appender.FileAppender">
    <file value="log.csv"/>
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
    <appendToFile value="true"/>
    <layout type="WheelChairCollaborativeGame.Logging.CsvPatternLayout">
      <header value="DateTime,Level,UserId,EventCode,Details&#13;&#10;" />
      <conversionPattern value=
"%date{M/d/yyyy H:mm:ss.fff}%newfield%level%newfield%property{UserId}%newfield%property{EventCode}%newfield%property{Details}%endrow" />
    </layout>
    <filter type="log4net.Filter.LoggerMatchFilter">
      <loggertomatch value="MyAwesomeLogger"/>
      <acceptonmatch value="false"/>
    </filter>
  </appender>



  <appender name="LogFileAppender" type="log4net.Appender.RollingFileAppender" >
    <param name="File" value="log-file.txt" />
    <param name="AppendToFile" value="true" />
    <rollingStyle value="Size" />
    <maxSizeRollBackups value="10" />
    <maximumFileSize value="10MB" />
    <staticLogFileName value="true" />
    <layout type="log4net.Layout.PatternLayout">
      <param name="ConversionPattern" value="[%thread] %-5level %logger [%property{NDC}] - %message%newline" />
    </layout>
  </appender>

  <logger name="MyAwesomeLogger">
    <level value="ALL" />
    <appender-ref ref="LogFileAppender" />
  </logger>

  <logger name="DetailedLogger">
    <level value="INFO" />
    <appender-ref ref="CsvFileAppenderDetail" />
  </logger>

  <logger name="SummaryLogger">
    <level value="INFO" />
    <appender-ref ref="CsvFileAppenderSummary" />
  </logger>
  
  <root>
    <level value="ALL" />
    <appender-ref ref="CsvFileAppender" />
  </root>
</log4net>